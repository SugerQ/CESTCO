<?xml version="1.0" encoding="utf-8"?>
<com.cesecsh.baselib.widget.view.alpha.AlphaRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/mTvName"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:ellipsize="start"
        android:gravity="left|center"
        android:padding="28px"
        android:singleLine="true"
        android:text="南华家园1幢一单元101"
        android:textColor="@color/color75Black"
        android:textSize="28px"/>

    <ImageView
        android:id="@+id/mImgSelected"
        android:layout_width="100px"
        android:layout_height="100px"
        android:layout_alignRight="@+id/mTvName"
        android:padding="28px"
        android:src="@drawable/selector_cb_bg"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="#e9e4e4"/>

</com.cesecsh.baselib.widget.view.alpha.AlphaRelativeLayout>